<%- include('../partials/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Comments</title>
</head>
<body>
    <h1>Edit Comment</h1>

    <h2>Comments</h2>
    <form action="/comments/<%= comment._id %>?_method=PUT" method="POST">
        <!-- Value attribute is being set to the comment's current text -->
        <input name="text" value="<%= comment.text %>">
        <button type="submit">UPDATE COMMENT</button>
      </form>
            <br><br>
      <textarea name="content">Add a public comment...</textarea>
      <br><br>
      <input type="submit" value="Add Comment">
    </form>
    